{
 "name": "Document Reference Builder",
 "description": "Create document references from online data",
 "version": "0.1",
 "manifest_version": 2,
 "content_scripts" : [
   {
     "matches" : ["http://*/*","https://*/*"],
     "js" : ["jquery-3.1.1.min.js"]
   }
 ],
 "browser_action": {
   "default_icon": "icon-128.png",
   "default_title": "Document Reference builder"
 },
 "background": {
   "scripts": ["jquery-3.1.1.min.js","background.js"]
 },
 "icons": {
     "16": "icon-16.png",
     "48": "icon-48.png",
     "128": "icon-128.png" },
 "permissions": [
     "tabs",
     "activeTab",
     "http://*/*",
     "https://*/*"
 ]
}
