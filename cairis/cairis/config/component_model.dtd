<!-- DTD for template CAIRIS component models -->

<!ELEMENT component_model (component*,component_association*)>
<!ELEMENT component (description,interface*)>
<!ATTLIST component name CDATA #REQUIRED>
<!ELEMENT description (#PCDATA)>
<!ELEMENT interface EMPTY>
<!ATTLIST interface name CDATA #REQUIRED>
<!ATTLIST interface type (provided | required) #REQUIRED> 

<!ELEMENT component_association EMPTY>
<!ATTLIST component_association from_component CDATA #REQUIRED>
<!ATTLIST component_association from_interface CDATA #REQUIRED>
<!ATTLIST component_association to_component CDATA #REQUIRED>
<!ATTLIST component_association to_interface CDATA #REQUIRED>
